{
  "manifest_version": 2,

  "key": "",
  "version": "0.1.2.0",

  "name": "Hide Hot Network Question on Stack Exchange",
  "short_name": "Hide HNQs",
  "icons": { "128": "icon128.png" },

  "permissions": [
    "storage"
  ],

  "content_scripts": [
    {
      "matches": [
        "*://*.stackoverflow.com/*",
        "*://*.stackexchange.com/*",
        "*://*.superuser.com/*",
        "*://*.serverfault.com/*",
        "*://*.stackapps.com/*",
        "*://*.mathoverflow.com/*",
        "*://*.askubuntu.com/*"
      ],
      "css": ["content.css"],
      "js": ["content.js"]
    }
  ],

  "background": {
    "scripts": ["background-nonpersistent.js"],
    "persistent": false
  },

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
